@model Hotel

@{
    ViewData["Title"] = "Hotel reserved";
}

<div>
<h1>Hotel reserved. Details:</h1>
<hr />
<dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-route-City="@Model.City" asp-controller="Booking">Back to list</a>
    <br>
    <a asp-action="Details" asp-route-Id="@Model.Id" asp-controller="Booking">Back to hotel's details</a>
</div>