@model  IEnumerable<Room>

@{
    ViewData["Title"] = "Avalible now";
}
<h2>Avalible now</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Seats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    if (item.Seats == SeatsCheck.seats)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Seats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) ₽
            </td>
            <td>
                <a asp-action="DetailsOfRoom" asp-route-Id="@item.Id"><button type="button" class="btn btn-success">Перейти</button></a>
            </td>
        </tr>
    }
}
    </tbody>
</table>